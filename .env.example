# Cogitura - Configurações de Ambiente

# === ElasticSearch Configuration ===
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_SENTENCES=cogitura_sentences
ELASTICSEARCH_INDEX_WORDS=cogitura_words

# === AI Provider Configuration ===
# Escolha qual provedor de IA usar: openai, anthropic, google, local, ollama
AI_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=100
OPENAI_TEMPERATURE=0.7

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=100

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Local/Ollama Models
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Custom API Endpoint (para modelos locais customizados)
CUSTOM_API_URL=http://localhost:8000/generate
CUSTOM_API_KEY=optional_api_key

# === Text-to-Speech Configuration ===
TTS_LANGUAGE=en
TTS_SLOW=false
TTS_OUTPUT_DIR=./data/audio

# === Training Configuration ===
TRAINING_BATCH_SIZE=32
TRAINING_EPOCHS=50
TRAINING_LEARNING_RATE=0.001
MODEL_OUTPUT_DIR=./models/trained

# === Cambridge Dictionary Configuration ===
# Opcional: para scraping do dicionário (use com responsabilidade)
CAMBRIDGE_DICT_ENABLED=false
CAMBRIDGE_DICT_DELAY=2

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=./logs/cogitura.log

# === Data Collection Settings ===
MAX_SENTENCES_TO_GENERATE=10000
MIN_SENTENCE_LENGTH=5
MAX_SENTENCE_LENGTH=20
BATCH_SIZE_GENERATION=100

# === Testing Configuration ===
TEST_SAMPLE_SIZE=1000
TEST_OUTPUT_DIR=./data/test_results
